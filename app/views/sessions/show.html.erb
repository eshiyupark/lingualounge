<div class="video-call w-100 h-100 d-flex flex-column align-items-center justify-content-start"
      data-controller="video-call"
      data-video-call-access-token-value="<%= @twilio_jwt %>"
      data-video-call-room-id-value="<%= @room_id %>"
      data-video-call-buddy-video-width-value="640">
  <div data-video-call-target="buddyVideo"></div>
  <div data-video-call-target="localVideo"></div>
  <div class="d-flex flex-column align-items-center justify-content-around h-75">
    <h1 class="text-center">Lounge found!</h1>
    <div class="d-flex flex-column align-items-center justify-content-start">
      <div>
        <%= link_to '#',class: 'call-button btn-start-call',
                      data: {
                        action: 'click->video-call#joinCall',
                        video_call_target: 'joinCallButton'
                      } do %>
                        <button class="btn-orange">I'm ready!</button>
                      <% end %>
      </div>
      <div>
        <%= link_to root_path do %>
          <button class="btn-orange">I'm not ready</button>
        <% end %>
      </div>
    </div>
  </div>

  <div>
    <%= link_to "Finish!", review_new_path(@session) %>
  </div>
</div>



