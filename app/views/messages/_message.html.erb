<div id="message-<%= message.id %>">
  <small>
    <%# <strong><%= message.user.first_name %>
    <% if message.created_at.strftime("%a %b %e")  == Date.today.strftime("%a %b %e") %>
      <i>Today <%= message.created_at.strftime(" at %l:%M %p") %></i>
    <% else %>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
    <% end %>
  </small>
  <p><%= message.content %></p>
</div>
