<%= simple_form_for [friendship, message],
    html: {
      data: { action: "turbo:submit-end->friendship-subscription#resetForm", friendship_subscription_target:"form" },
      class: "d-flex"
      } do |f|
  %>
    <%= f.input :content,
      label: false,
      placeholder: "Type message",
      wrapper_html: {class: "flex-grow-1"}
    %>
    <%= f.submit "Send", class: "btn btn-primary mb-3"%>
  <% end %>
