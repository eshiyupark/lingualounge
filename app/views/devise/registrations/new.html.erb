<div class="w-100 h-100 d-flex flex-column align-items-center justify-content-start">
  <h2>Sign up</h2>
  <div class="review-form-container w-75">
    <%= simple_form_for(resource, as: resource_name, html: { class: "w-100 p-1" }, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="d-flex align-items-center justify-content-center w-100">
        <%= f.error_notification %>
      </div>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.label :username, 'Username*' %>
        <%= f.input :username,
                    required: true,
                    label: false,
                    input_html: { autocomplete: "username" } %>
        <%= f.label :first_name, 'First Name*' %>
        <%= f.input :first_name,
                    required: true,
                    label: false,
                    input_html: { autocomplete: "given-name" } %>
        <%= f.label :last_name, 'Last Name*' %>
        <%= f.input :last_name,
                    required: true,
                    label: false,
                    input_html: { autocomplete: "family-name" } %>
        <%= f.label :username, 'Date of Birth*' %>
        <%= f.input :date_of_birth,
                    required: true,
                    label: false,
                    start_year: Date.today.year - 110,
                    end_year: Date.today.year,
                    include_blank: true,
                    input_html: { autocomplete: "bday", class: "bg-light" } %>
        <%= f.label :gender, 'Gender' %>
        <%= f.input :gender,
                    required: false,
                    label: false,
                    input_html: { class: "bg-light" },
                    collection: ["male", "female", "prefer not to say"] %>
        <%= f.input :photo, as: :file %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>
