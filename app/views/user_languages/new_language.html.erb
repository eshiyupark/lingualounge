<div class="w-100 h-100 d-flex flex-column align-items-center justify-content-start">
  <div class="d-flex flex-column align-items-center justify-content-around h-75 w-75">
    <h2 class="text-center">Select your languages</h2>
    <div class="review-form-container">
      <%= simple_form_for :user_language, method: :post, html: { class: "w-100 p-1" }, url: user_languages_setup_path do |f| %>
        <%= f.label :user_languages, 'My Languages*' %>
        <%= f.input :user_languages,
                    required: true,
                    label: false,
                    collection: Language.all,
                    input_html: {multiple: true, include_blank: false, data: {controller: "tom-select", tom_select_options_value: {tags: true, items: @user.languages.map(&:id)}}} %>
        <% if @message %>
          <p class="text-danger"><%= @message %></p>
        <% end %>
        <%= f.submit "Save Changes", class: "btn-orange" %>
      <% end %>
    </div>
  </div>
</div>
